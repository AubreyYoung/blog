select ename||' 的薪水是 '||sal||' 提成是 '||coalesce(comm,0) from emp;
select 'truncate table '||owner||'.'||table_name||';' as 清空表 from all_tables where owner ='SCOTT';

select 'select table_name from all_tables where owner =''SCOTT'';' from dual;

select ename as 姓名,
       case  when sal <= 2000 then '薪资低'
       when  sal >= 5000 then '薪资高'
       else '薪资中等'  end as 薪资水平
  from emp
 where deptno = 10;

SELECT 档次, COUNT(*) 
  FROM (SELECT (CASE
                 WHEN SAL <= 1000 THEN
                  '0000-1000'
                 WHEN SAL <= 2000 THEN
                  '1000-2000'
                 WHEN SAL <= 3000 THEN
                  '2000-3000'
                 WHEN SAL <= 4000 THEN
                  '3000-4000'
                 WHEN SAL <= 5000 THEN
                  '4000-5000'
                 ELSE
                  'high salary'
               END) AS 档次,
               ENAME,
               SAL
          FROM EMP) X
 GROUP BY 档次
 ORDER BY 2 DESC;


SELECT * FROM emp  WHERE ROWNUM <= 2;
SELECT * FROM
(SELECT ROWNUM AS sn, emp.* FROM emp)  WHERE sn = 2;
